<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :姓名 %><br>
    <%= f.text_field :name, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :住址 %><br>
    <%= f.text_area :address, :rows => 3, :cols => 40 %>
  </div>
  <div class="field">
    <%= f.label :邮箱 %><br>
    <%= f.text_area :email %>
  </div>
  <div class="field">
    <%= f.label :支付方式 %><br>
    <%= f.select :pay_type, Order::PAYMENT_TYPES, 
      :prompt => '选择一种支付方式' %>
  </div>
    <%= hidden_field_tag 'order[user_id]',session[:user_id] %>
  <div class="actions">
    <%= f.submit '提交订单' %>
  </div>
<% end %>
