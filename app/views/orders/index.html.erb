<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>



<table>
  <thead>
    <tr>
      <th>姓名</th>
      <th>地址</th>
      <th>邮箱</th>
      <th>付款方式</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

